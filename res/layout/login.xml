<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/bg_login">
  
  <ImageView
  	android:id="@+id/imageLogin"
  	android:layout_width="wrap_content"
  	android:layout_height="100dip"
  	android:layout_marginLeft="100dip"
  	android:layout_marginTop="20dip"
  	android:layout_centerHorizontal="true"
  	android:src="@drawable/image_login8"
  />
  <TextView
 	android:id="@+id/userNameLabelLogin"
  	android:text="登录名"
  	android:textColor="#000000"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_below="@id/imageLogin"
  	android:layout_marginLeft="60dip"
  	android:layout_marginTop="10dip"
  />
  <EditText
  	android:id="@+id/userNameTextLogin"
  	android:layout_width="200dip"
  	android:layout_height="40dip"
  	android:layout_below="@id/userNameLabelLogin"
  	android:layout_marginLeft="60dip"
  	android:hint="登录名"
  />
  <TextView
 	android:id="@+id/userPassLabelLogin"
  	android:text="密码"
  	android:textColor="#000000"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_below="@id/userNameTextLogin"
  	android:layout_marginLeft="60dip"
  	android:layout_marginTop="5dip"
  />
  <EditText
  	android:id="@+id/userPassTextLogin"
  	android:layout_width="200dip"
  	android:layout_height="40dip"
  	android:layout_below="@id/userPassLabelLogin"
  	android:layout_marginLeft="60dip"
  	android:password="true"
  	android:hint="密码"
  />
  <CheckBox
  android:id="@+id/checkSavePassLogin"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_below="@id/userPassTextLogin"
  android:text="保存密码"
  android:layout_marginLeft="45dip"
  android:layout_marginTop="10dip"
  />
   <CheckBox
  android:id="@+id/checkSelfLoadLogin"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_below="@id/userPassTextLogin"
  android:layout_toRightOf="@id/checkSavePassLogin"
  android:text="自动登录"
  android:layout_marginLeft="20dip"
  android:layout_marginTop="10dip"
  />
  <Button
  	android:id="@+id/loginButtonLogin"
  	android:text="登陆"
  	android:layout_width="110dip"
  	android:layout_height="40dip"
  	android:layout_below="@id/checkSavePassLogin"
  	android:layout_marginLeft="45dip"
  	android:layout_marginTop="10dip"
  />
  <Button
  	android:id="@+id/registerButtonLogin"
  	android:text="注册"
  	android:layout_width="110dip"
  	android:layout_height="40dip"
  	android:layout_below="@id/checkSavePassLogin"
  	android:layout_toRightOf="@id/loginButtonLogin"
  	android:layout_marginTop="10dip"
  	android:layout_marginLeft="10dip"
  />
  <TextView
  	android:id="@+id/infoTextLogin"
  	android:text="意见反馈"
  	android:textColor="#FF0000"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_below="@id/loginButtonLogin"
  	android:layout_marginTop="20dip"
  	android:layout_centerHorizontal="true"
  />
</RelativeLayout>
