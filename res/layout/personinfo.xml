<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="@drawable/bg_login"
  >
<RelativeLayout
   android:id="@+id/layoutheadPersonInfo"
    android:layout_width="fill_parent" 
    android:layout_height="30dip" 
    android:background="@drawable/head"
    >
     <ImageView
   android:id="@+id/userImagePersonInfo"
   android:layout_width="30dip" 
   android:layout_height="30dip" 
   android:layout_marginLeft="5dip"
   android:src="@drawable/icon"
   />
   <TextView
   android:id="@+id/userNamePersonInfo"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:text="心中的光年"
    android:textSize="12dip"
    android:layout_toRightOf="@id/userImagePersonInfo"
    android:layout_marginLeft="5dip"
    android:layout_marginTop="5dip"
   />
    <TextView
    android:text="好友档案"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="5dip"
    />
    </RelativeLayout>
<RelativeLayout
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:layout_below="@id/layoutheadPersonInfo"
  >
  
  <ImageView
  	android:id="@+id/imagePersonInfo"
  	android:layout_width="80dip"
  	android:layout_height="80dip"
  	android:layout_marginLeft="10dip"
  	android:layout_marginTop="10dip"
  	android:src="@drawable/personpage"
  />
  <TextView
  	android:id="@+id/loadNumLabelPersonInfo"
  	android:layout_width="60dip"
  	android:layout_height="wrap_content"
  	android:layout_below="@id/imagePersonInfo"
  	android:layout_marginTop="10dip"
  	android:layout_marginLeft="10dip"
  	android:text="登陆名"
  />
  <TextView
  	android:id="@+id/loadNumTextPersonInfo"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_below="@id/imagePersonInfo"
  	android:layout_toRightOf="@id/loadNumLabelPersonInfo"
  	android:layout_marginTop="10dip"
  	android:layout_marginLeft="50dip"
  	android:text="HELLO_ANDROID"
  />
  <TextView
  	android:id="@+id/signLabelPersonInfo"
  	android:layout_width="60dip"
  	android:layout_height="wrap_content"
  	android:layout_below="@id/loadNumLabelPersonInfo"
  	android:layout_marginTop="10dip"
  	android:layout_marginLeft="10dip"
  	android:text="签名"
  />
  <TextView
  	android:id="@+id/signTextPersonInfo"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_below="@id/loadNumTextPersonInfo"
  	android:layout_toRightOf="@id/signLabelPersonInfo"
  	android:layout_marginTop="10dip"
  	android:layout_marginLeft="50dip"
  	android:text="哈 哈"
  />
  <TextView
  	android:id="@+id/registerLabelPersonInfo"
  	android:layout_width="60dip"
  	android:layout_height="wrap_content"
  	android:layout_below="@id/signLabelPersonInfo"
  	android:layout_marginTop="10dip"
  	android:layout_marginLeft="10dip"
  	android:text="注册时间"
  />
  <TextView
  	android:id="@+id/registerTextPersonInfo"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_below="@id/signLabelPersonInfo"
  	android:layout_toRightOf="@id/registerLabelPersonInfo"
  	android:layout_marginTop="10dip"
  	android:layout_marginLeft="50dip"
  	android:text="2013-03-22"
  />
  <TextView
  	android:id="@+id/blogLabelPersonInfo"
  	android:layout_width="60dip"
  	android:layout_height="wrap_content"
  	android:layout_below="@id/registerLabelPersonInfo"
  	android:layout_marginTop="10dip"
  	android:layout_marginLeft="10dip"
  	android:text="日志"
  />
  <TextView
  	android:id="@+id/blogTextPersonInfo"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_below="@id/registerLabelPersonInfo"
  	android:layout_toRightOf="@id/blogLabelPersonInfo"
  	android:layout_marginTop="10dip"
  	android:layout_marginLeft="50dip"
  	android:text="5篇"
  />
  <TextView
  	android:id="@+id/viewBlogTextPersonInfo"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_below="@id/registerLabelPersonInfo"
  	android:layout_toRightOf="@id/blogTextPersonInfo"
  	android:layout_marginTop="10dip"
  	android:layout_marginLeft="50dip"
  	android:text="查看日志"
  	android:textColor="#ff0000"
  />
</RelativeLayout>
</RelativeLayout>